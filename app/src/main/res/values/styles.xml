        <item name="android:textColor">@color/s_text_color_black</item>
    </style>

    <style name="STextAppearance.Micro.Black1">
        <item name="android:textColor">@color/s_text_color_black_1</item>
    </style>


    <style name="STextAppearance.Small.Black">
        <item name="android:textColor">@color/s_text_color_black</item>
