<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_medium"
        android:text="卧室"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_dev_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:text="2"
        android:textColor="@color/black_3" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_room_name"
        android:layout_marginLeft="@dimen/view_16"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginRight="@dimen/view_16"
        android:background="@color/black_7" />
</RelativeLayout>