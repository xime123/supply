<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_large"
        android:layout_marginRight="@dimen/gap_large"
        android:background="@mipmap/bg_card_normal"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/gap_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_2"
        android:layout_marginLeft="@dimen/gap_medium"
        android:text="身份钱包:"/>


    <ListView
        android:id="@+id/user_lv"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_width="match_parent"

        android:listSelector="@android:color/transparent"
        android:divider="@null"
        android:minHeight="100dp"
        android:layout_height="@dimen/view_200"></ListView>

    </LinearLayout>
</LinearLayout>