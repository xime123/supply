<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:paddingTop="@dimen/gap_medium"
            android:paddingLeft="@dimen/gap_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最近交易记录"
            android:background="@color/white"
            android:textColor="#ff999999"
            android:textSize="9dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/gap_medium"
                android:layout_alignParentRight="true"
                android:text="-6ether"
                android:textColor="#ffe50000"
                android:textSize="12dp"
                />
            <LinearLayout
                android:gravity="left"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/gap_medium"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08ef234923498..123ef"
                    android:textColor="#ff4b5164"
                    android:textSize="12dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4天前"
                    android:textColor="#ff9b9b9b"
                    android:textSize="9dp"
                    />
            </LinearLayout>>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/divider_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/gap_medium"
                android:layout_alignParentRight="true"
                android:text="+12ether"
                android:textColor="#ff336ffa"
                android:textSize="12dp"
                />
            <LinearLayout
                android:gravity="left"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/gap_medium"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08ef234923498..123ef"
                    android:textColor="#ff4b5164"
                    android:textSize="12dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4天前"
                    android:textColor="#ff9b9b9b"
                    android:textSize="9dp"
                    />
            </LinearLayout>>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/divider_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/gap_medium"
                android:layout_alignParentRight="true"
                android:text="-6ether"
                android:textColor="#ffe50000"
                android:textSize="12dp"
                />
            <LinearLayout
                android:gravity="left"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/gap_medium"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08ef234923498..123ef"
                    android:textColor="#ff4b5164"
                    android:textSize="12dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4天前"
                    android:textColor="#ff9b9b9b"
                    android:textSize="9dp"
                    />
            </LinearLayout>>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/divider_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/gap_medium"
                android:layout_alignParentRight="true"
                android:text="+12ether"
                android:textColor="#ff336ffa"
                android:textSize="12dp"
                />
            <LinearLayout
                android:gravity="left"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/gap_medium"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08ef234923498..123ef"
                    android:textColor="#ff4b5164"
                    android:textSize="12dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4天前"
                    android:textColor="#ff9b9b9b"
                    android:textSize="9dp"
                    />
            </LinearLayout>>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/translate_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="转账"
            android:gravity="center"
            android:background="#ff3471fa"
            android:textColor="#ffffffff"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/shouzhang_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="收款"
            android:gravity="center"
            android:background="#ff34b2fa"
            android:textColor="#ffffffff"
            android:textSize="14dp"/>
    </LinearLayout>
</RelativeLayout>
