<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">
        <RelativeLayout
            android:layout_margin="@dimen/gap_medium"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_name_tv"
                android:layout_toRightOf="@+id/wallet_iv"
                android:gravity="top"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/STextAppearance.Medium.Black1"
                android:text="001批次"/>
            <TextView
                android:id="@+id/category_address_tv"
                android:layout_below="@+id/category_name_tv"
                android:layout_marginLeft="@dimen/gap_medium"
                android:singleLine="true"
                android:ellipsize="middle"
                android:layout_marginRight="@dimen/view_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/STextAppearance.Medium.Black3"
                android:text="0xf333ad4de5dfsdfdfsdfdsfsdfdsfdsfsdffa"/>

            <TextView
                android:id="@+id/add_category_info_tv"
                android:layout_marginRight="@dimen/gap_medium"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:padding="@dimen/gap_small"
                android:text="添加原料"
                android:background="@drawable/shape_bg_line_green"
                style="@style/STextAppearance.Micro.White1"/>

        </RelativeLayout>

</android.support.v7.widget.CardView >