<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/gap_large"
        android:paddingLeft="@dimen/gap_medium"
        android:paddingRight="@dimen/gap_medium">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gesture_password"
            android:textAppearance="@style/STextAppearance.Medium.Black1" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_lockpattern"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/gap_small"
            android:gravity="center" />

    </LinearLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/gap_medium"
        android:background="@color/color_divider" />

    <bd.com.appcore.ui.view.CommonLineTextView
        android:id="@+id/need_gesture_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/gap_medium"
        app:data_text="30分钟"
        app:showLeft_icon="false"
        app:title="@string/need_gesture_password" />

    <bd.com.appcore.ui.view.CommonLineTextView
        android:id="@+id/tv_edit_lockpattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/gap_medium"
        app:showLeft_icon="false"
        app:showTextLine="false"
        app:title="@string/change_gesture_password" />

    <include layout="@layout/divider_layout" />

    <bd.com.appcore.ui.view.CommonLineTextView
        android:id="@+id/on_line_time_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_super_super_large"
        android:layout_marginTop="@dimen/gap_medium"
        android:background="@color/white"
        app:data_text="一天"
        app:showLeft_bottom_line="true"
        app:showLeft_icon="false"
        app:showLeft_top_line="true"
        app:title="@string/online_validate_time" />
</LinearLayout>