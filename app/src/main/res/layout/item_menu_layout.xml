<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/gap_medium"
    android:paddingTop="@dimen/gap_medium"
    android:layout_marginLeft="@dimen/gap_medium"
    android:layout_marginRight="@dimen/gap_medium"
    android:background="@drawable/shape_btn_yellow"
    android:layout_height="wrap_content">
    <bd.com.appcore.ui.view.CircleImageView
        android:id="@+id/wallet_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/gap_medium"
        android:visibility="gone"
        android:src="@mipmap/ic_category_32"/>
    <TextView
        android:id="@+id/wallet_name_tv"
        android:layout_toRightOf="@+id/wallet_iv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/gap_medium"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="星络钱包"/>
    <TextView
        android:id="@+id/wallet_name_addr"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/wallet_iv"
        android:layout_below="@+id/wallet_name_tv"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/gap_medium"
        android:singleLine="true"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="星络钱包"/>
</RelativeLayout>