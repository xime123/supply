<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/category_info_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bgi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_200"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/gap_small"
            android:layout_marginBottom="@dimen/gap_small"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gift_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_gift"/>
            <bd.com.supply.widget.marqueeview.MarqueeView
                android:id="@+id/ad_marqueeView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:mvAnimDuration="1000"
                app:mvDirection="bottom_to_top"
                android:layout_toRightOf="@+id/gift_iv"
                app:mvInterval="3000"
                app:mvGravity="left"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_centerVertical="true"
                app:mvTextColor="@color/red_click"
                app:mvTextSize="16sp"
                app:mvSingleLine="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/wallet_frag_ll_tap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_micro"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gap_medium"
            android:paddingLeft="@dimen/gap_medium"
            android:paddingRight="@dimen/gap_medium">


            <TextView
                android:id="@+id/category_name_tv"
                style="@style/STextAppearance.Small.Black1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_small"
                android:gravity="center"
                android:text="产品认证参数"

                android:textColor="@color/black_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_medium">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/STextAppearance.Micro.Black3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[品名]" />

                    <TextView
                        android:id="@+id/bn_tv"
                        style="@style/STextAppearance.Micro.Black1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_micro"
                        android:text="" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/STextAppearance.Micro.Black3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[生产许可证编号]" />

                    <TextView
                        android:id="@+id/plc_tv"
                        style="@style/STextAppearance.Micro.Black1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_micro"
                        android:text="SC112343434234" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_small">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/STextAppearance.Micro.Black3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[规格]" />

                    <TextView
                        android:id="@+id/spec_tv"
                        style="@style/STextAppearance.Micro.Black1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_micro"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/STextAppearance.Micro.Black3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[存储方式]" />

                    <TextView
                        android:id="@+id/sm_tv"
                        style="@style/STextAppearance.Micro.Black1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_micro"
                        android:text="" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_small">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/STextAppearance.Micro.Black3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[香型]" />

                    <TextView
                        android:id="@+id/nm_tv"
                        style="@style/STextAppearance.Micro.Black1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_micro"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/STextAppearance.Micro.Black3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[生产日期]" />

                    <TextView
                        android:id="@+id/pd_tv"
                        style="@style/STextAppearance.Micro.Black1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_micro"
                        android:text="" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/gap_micro"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    style="@style/STextAppearance.Micro.Black3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[原料]" />

                <TextView
                    android:id="@+id/mt_tv"
                    style="@style/STextAppearance.Micro.Black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gap_micro"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/gap_micro"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    style="@style/STextAppearance.Micro.Black3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[地址]" />

                <TextView
                    android:id="@+id/ad_tv"
                    style="@style/STextAppearance.Micro.Black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gap_micro"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/gap_micro"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    style="@style/STextAppearance.Micro.Black3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[电话]" />

                <TextView
                    android:id="@+id/tel_tv"
                    style="@style/STextAppearance.Micro.Black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gap_micro"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
            <ImageView
                android:id="@+id/iv_material_sale_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scaleType="center"
                android:visibility="gone"
                android:src="@mipmap/material_sale_out"/>
        </RelativeLayout>
        <TextView
            style="@style/STextAppearance.Small.Black1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_40"
            android:layout_below="@+id/category_info_ll"
            android:layout_marginTop="@dimen/gap_small"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/gap_medium"
            android:text="产品溯源信息" />
    </LinearLayout>


</RelativeLayout>