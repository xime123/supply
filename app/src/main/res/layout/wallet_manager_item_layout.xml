<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">
        <RelativeLayout
            android:layout_margin="@dimen/gap_medium"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <bd.com.appcore.ui.view.CircleImageView
                android:id="@+id/wallet_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_category_0"/>
            <TextView
                android:id="@+id/wallet_name_tv"
                android:layout_toRightOf="@+id/wallet_iv"
                android:gravity="top"
                android:layout_marginLeft="@dimen/gap_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/STextAppearance.Medium.Black1"
                android:text="qqq"/>
            <TextView
                android:id="@+id/wallet_address_tv"
                android:layout_toRightOf="@+id/wallet_iv"
                android:layout_below="@+id/wallet_name_tv"
                android:layout_marginLeft="@dimen/gap_medium"
                android:singleLine="true"
                android:ellipsize="middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/STextAppearance.Medium.Black3"
                android:text="qqq"/>
            <View
                android:id="@+id/divide_line"
                android:layout_marginTop="@dimen/gap_medium"
                android:layout_below="@+id/wallet_iv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide_disable_gray"/>
            <TextView
                android:id="@+id/balance_tv"
                android:layout_marginTop="@dimen/gap_medium"
                android:layout_below="@+id/divide_line"
                android:layout_marginRight="@dimen/gap_super_super_large"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29.09"
                style="@style/STextAppearance.Large.Black1"/>
            <TextView
                android:id="@+id/token_type"
                android:layout_marginTop="@dimen/view_18"
                android:layout_below="@+id/divide_line"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/STextAppearance.Small.Black3"
                android:text="ether"/>
        </RelativeLayout>

</android.support.v7.widget.CardView >