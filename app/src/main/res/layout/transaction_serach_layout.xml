<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/cyan_normal"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/gap_small"
        android:padding="@dimen/gap_small"
        android:src="@mipmap/icn_back_white" />

    <EditText
        android:id="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_back"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:background="@drawable/shape_btn_white"
        android:hint="请输入Token名称或者合约地址"
        android:paddingLeft="@dimen/gap_medium"
        android:singleLine="true"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/view_14" />

    <View
        android:id="@+id/action_bar_common_divider_v"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/black_4" />
    </LinearLayout>

</LinearLayout>
