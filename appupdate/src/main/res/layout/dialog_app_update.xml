<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="317dp"
    android:layout_gravity="center"
    android:background="@mipmap/bg_pop"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_common_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="45.5dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:textSize="23sp"
        tools:text="版本更新" />

    <TextView
        android:id="@+id/tv_common_dialog_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17.5dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/dialog_version_bg"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="V1.1.4"
        android:textColor="@color/color_white"
        android:textSize="13sp"
        tools:text="版本更新" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tv_common_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="32dp"
            android:scrollbars="vertical"
            android:paddingRight="@dimen/view_32"
            android:textColor="@color/color_black"
            android:textSize="14sp"
            tools:text="1.增加人脸识别功能；\n2.新增更多入口；\n3.UI界面进行优化" />
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="29dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_common_dialog_left_btn"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:background="@mipmap/btn_giveup_big" />


        <ImageView
            android:id="@+id/tv_common_dialog_right_btn"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:background="@mipmap/btn_update_small" />

    </LinearLayout>
</LinearLayout>