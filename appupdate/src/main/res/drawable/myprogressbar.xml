<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="5dip" />

            <gradient
                android:angle="0"
                android:endColor="#BBB6AC"
                android:startColor="#BBB6AC" />
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="45"
                    android:endColor="#FF840D"
                    android:startColor="#FFB200" />
            </shape>
        </clip>
    </item>

</layer-list>