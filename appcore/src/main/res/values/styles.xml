<resources>


    <style name="style_loading_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/loading_bg</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--标题栏-->
    <declare-styleable name="CommonActionBar">
        <attr name="showBack" format="boolean" />
        <attr name="showMenu1" format="boolean" />
        <attr name="showMenu2" format="boolean" />
        <attr name="backSrc" format="reference" />
        <attr name="menu1Src" format="reference" />
        <attr name="menu2Src" format="reference" />
        <attr name="titleText" format="string" />
    </declare-styleable>

    <style name="DialogTranslucentNoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="DialogTranslucentNoTitle2" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>

    <style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_top_out</item>
    </style>


    <!--圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <style name="Text_white_36">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text_white_32">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">16sp</item>
    </style>
    <dimen name="medium_head_width">80dp</dimen>
    <dimen name="medium_head_height">80dp</dimen>


    <style name="SImageAppearance"></style>
    <style name="SImageAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="STextAppearance"></style>

    <style name="STextAppearance.Micro">
        <item name="android:textSize">@dimen/s_text_size_micro</item>
    </style>

    <style name="STextAppearance.Small">
        <item name="android:textSize">@dimen/s_text_size_small</item>
    </style>

    <style name="STextAppearance.Medium">
        <item name="android:textSize">@dimen/s_text_size_medium</item>
    </style>

    <style name="STextAppearance.Large">
        <item name="android:textSize">@dimen/s_text_size_large</item>
    </style>
    <!-- ———————————————————— 白色字体style ———————————————————— -->
    <style name="STextAppearance.Micro.White1">
        <item name="android:textColor">@color/s_text_color_white_1</item>
    </style>

    <style name="STextAppearance.Small.White1">
        <item name="android:textColor">@color/s_text_color_white_1</item>
    </style>

    <style name="STextAppearance.Medium.White1">
        <item name="android:textColor">@color/s_text_color_white_1</item>
    </style>

    <style name="STextAppearance.Large.White1">
        <item name="android:textColor">@color/s_text_color_white_1</item>
    </style>

    <style name="STextAppearance.Small.Black3">
        <item name="android:textColor">@color/s_text_color_black_3</item>
    </style>

    <style name="STextAppearance.Medium.Black3">
        <item name="android:textColor">@color/s_text_color_black_3</item>
    </style>
    <style name="STextAppearance.Medium.Black1">
        <item name="android:textColor">@color/s_text_color_black_1</item>
    </style>

    <!--通用的文本-->
    <declare-styleable name="CommonLineTextView">
        <attr name="showLeft_top_line" format="boolean" />
        <attr name="showLeft_bottom_line" format="boolean" />
        <attr name="showLeft_icon" format="boolean" />
        <attr name="showTextRightIcon" format="boolean" />
        <attr name="showTextLine" format="boolean" />
        <attr name="text_right_src" format="reference" />
        <attr name="text_left_src" format="reference" />
        <attr name="data_text" format="string" />
        <attr name="title" format="string" />
    </declare-styleable>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

</resources>
